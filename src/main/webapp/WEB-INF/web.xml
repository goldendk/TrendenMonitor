<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">


    <filter>
        <filter-name>UserContextFilter</filter-name>
        <filter-class>org.goldenworkshop.trenden.view.security.AuthContextFilter</filter-class>
    </filter>

    <filter>
        <filter-name>AuthenticatedFilter</filter-name>
        <filter-class>org.goldenworkshop.trenden.view.security.AuthenticatedFilter</filter-class>
    </filter>
    <servlet>
        <servlet-name>GoogleAuthServlet</servlet-name>
        <servlet-class>org.goldenworkshop.trenden.view.security.GoogleAuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoogleAuthServlet</servlet-name>
        <url-pattern>/GoogleAuth</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>org.goldenworkshop.trenden.view.security.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/user/logout</url-pattern>
    </servlet-mapping>

    <servlet>

        <servlet-name>Jersey REST Service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>org.goldenworkshop.trenden.view.rest.Application</param-value>

        </init-param>
        <!-- Register resources and providers under com.vogella.jersey.first package. -->
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>org.goldenworkshop.trenden.view.rest</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- /user/* -->
    <filter-mapping>
        <filter-name>UserContextFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticatedFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>UserContextFilter</filter-name>
        <url-pattern>/GoogleAuth</url-pattern>
    </filter-mapping>

    <!-- rest -->
    <filter-mapping>
        <filter-name>UserContextFilter</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticatedFilter</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>Jersey REST Service</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/googleAuth.html</welcome-file>
    </welcome-file-list>

</web-app>